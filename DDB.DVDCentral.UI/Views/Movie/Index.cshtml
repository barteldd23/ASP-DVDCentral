@model IEnumerable<DVDCentral.BL.Models.Movie>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
        <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-sm-4">
            <div class="card-header">
                @Html.DisplayNameFor(model => model.Title)
            </div>

            <div class="card-body">
                <div class="card-img">
                    <img src="~/images/@item.ImagePath" 
                         class="imgcard" 
                         alt="@item.Title Poster" 
                         id="movieImage"
                          />
                </div>
                <p>@Html.DisplayNameFor(model => model.Description)</p>
                <p>@Html.DisplayNameFor(model => model.Cost)</p>
                <p>@Html.DisplayNameFor(model => model.Cost)</p>
                <p>@Html.DisplayNameFor(model => model.InStkQty)</p>
                <p>@Html.DisplayNameFor(model => model.RatingDescription)</p>
                <p>@Html.DisplayNameFor(model => model.FormatDescription)</p>
                <p>@Html.DisplayNameFor(model => model.DirectorFullName)</p>
            </div>

            <div class="card-footer">
                 @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                 @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                 @Html.ActionLink("Delete", "Delete", new { id=item.Id }) 
            </div>

        </div>

    }
</div>

